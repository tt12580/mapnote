<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(@user, class: "form-inline") do |f| %>
      <%= f.input :name, label: "名字", class: "form-control" %>
      <%= f.input :email, label: "邮箱", class: "form-control" %>
      <%= f.input :password, label: "密码", class: "form-control" %>
      <%= f.input :password_confirmation, label: "确认密码", class: "form-control" %>
      <%= f.button "submit", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>
