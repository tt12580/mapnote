<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(:session, url: login_path, class: "form-inline") do |f| %>
      <%= f.input :email, label: "邮箱", class: "form-control" %>
      <%= f.input :password, label: "密码", class: "form-control" %>
      <%= f.button "submit", class: "btn btn-primary btn-block" %>
    <% end %>
    <br>
    New User? <%= link_to "Sign up now!", signup_path %>
  </div>
</div>
